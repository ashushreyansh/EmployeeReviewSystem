<!-- updateEmployeePage.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Employee</title>
    <link rel="icon" href="/images/logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
        h1 {
        color: #333;
        }

        form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        }

        input,
        select {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        box-sizing: border-box;
        }

        button {
        background-color: #c85262;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        }

        button:hover {
        background-color: #45a049;
        }
    </style>
  </head>
  <body>
    <%- include("./navbar") %>

    <h1>Update Employee: <%= employee.username %></h1>

    <form action="/admin/update-employee/<%= employee._id %>" method="post">
      <!-- Add your update form fields here -->
      <label for="updatedEmployeeName">Employee Name:</label>
      <input type="text" id="updatedEmployeeName" name="updatedEmployeeName" value="<%= employee.username %>" required />

      <label for="updatedEmployeeEmail">Employee Email:</label>
      <input type="email" id="updatedEmployeeEmail" name="updatedEmployeeEmail" value="<%= employee.email %>" required />

      <label for="updatedEmployeeRole">Employee Role:</label>
      <select id="updatedEmployeeRole" name="updatedEmployeeRole" required>
        <option value="admin" <%= employee.role === 'admin' ? 'selected' : '' %>>Admin</option>
        <option value="employee" <%= employee.role === 'employee' ? 'selected' : '' %>>Employee</option>
      </select>

      <button type="submit">Update</button>
    </form>

    <!-- Add any additional content as needed -->

  </body>
</html>
